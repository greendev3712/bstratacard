<Window x:Name="mainWindow" x:Class="ScreenRecord.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenRecord"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="500" Closing="MainWindow_Closing">
    <Grid>
        <Button x:Name="buttonStart" Content="Start" HorizontalAlignment="Left" Margin="123,31,0,0" VerticalAlignment="Top" Width="75" Click="ButtonStart_Click"/>
        <Button x:Name="buttonStop" Content="Stop" HorizontalAlignment="Left" Margin="221,31,0,0" VerticalAlignment="Top" Width="75" Click="ButtonStop_Click"/>
        <TextBox x:Name="textInfo" Margin="10,56,10,10" TextWrapping="Wrap" Text="textInfo" IsReadOnlyCaretVisible="True"/>
        <TextBox x:Name="textFileName" Height="26" Margin="78,0,47,0" TextWrapping="Wrap" Text="textFileName" VerticalAlignment="Top" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Filename:" VerticalAlignment="Top" FontSize="14" Height="20" Width="63" Margin="10,1,0,0"/>
        <Button Content="..." Margin="0,1,10,0" VerticalAlignment="Top" Height="25" FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Width="32" Click="Button_Click"/>

    </Grid>
</Window>
